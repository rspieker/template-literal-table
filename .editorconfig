# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*rc]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space
